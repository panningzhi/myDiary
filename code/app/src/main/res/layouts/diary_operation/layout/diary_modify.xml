<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_4">

    <LinearLayout
        android:id="@+id/diary_modify_ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <EditText
        android:id="@+id/diary_modify_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="标题"
        android:textSize="40dp"
        android:background="#005e6d82"/>

    <EditText
        android:id="@+id/diary_modify_author"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="作者"
        android:textSize="40dp"
        android:background="#005e6d82"/>

    <EditText
        android:id="@+id/diary_modify_time"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="时间"
        android:textSize="40dp"
        android:background="#005e6d82"/>

    <EditText
        android:id="@+id/diary_modify_content"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="日记内容"
        android:textSize="40dp"
        android:background="#005e6d82"/>

    </LinearLayout>

    <LinearLayout
        android:id="@id/diary_modify_ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/diary_modify_ll1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="是否修改" />
        <Switch
            android:id="@+id/diary_modify_switch"
            android:layout_marginTop="10dp"
            android:typeface="normal"
            android:textOff="开"
            android:textOn="关"
            android:switchMinWidth="40dp"
            android:switchPadding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/diary_modify_text"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/diary_modify_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="是否修改" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/diary_modify_ll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/diary_modify_ll2">

    <Button
        android:id="@+id/diary_modify_button1"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:text="修改"
        android:textColor="@color/colorWrite"
        android:textSize="25dp"
        android:layout_marginRight="30dp"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/diary_modify_back"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:text="返回"
        android:textColor="@color/colorWrite"
        android:textSize="25dp"
        android:layout_marginLeft="30dp"
        android:onClick="onClick1"/>

    </LinearLayout>

</RelativeLayout>
